# Required if PLATFORM=telegram
TELEGRAM_BOT_TOKEN=

# Required if PLATFORM=twilio
TWILIO_ACCOUNT_SID=ACxxxxx
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=+16155551234
TWILIO_ALLOWLIST=+16155559999:Gib,+16155558888:Mary Becker
# TWILIO_WEBHOOK_PORT=3000

# Required if PLATFORM=groupme
GROUPME_BOT_ID=
